# SFMC Toolkit - Environment Configuration
# 
# APP-LEVEL SECRETS ONLY - Never store customer credentials here!
# Customer MC credentials are stored per-tenant in encrypted database

# Application Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_32_character_session_secret_here
JWT_SECRET=your_32_character_jwt_secret_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sfmc_toolkit
# or MongoDB: MONGODB_URI=mongodb://localhost:27017/sfmc_toolkit

# Application Configuration
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# Redis (for session storage - recommended for production)
REDIS_URL=redis://localhost:6379

# Optional: Default OAuth settings (can be overridden per tenant)
DEFAULT_REDIRECT_URI=http://localhost:3001/auth/callback
DEFAULT_SCOPE=email_read email_write email_send web_read web_write data_extensions_read data_extensions_write journeys_read automations_read

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_SIGNUP=true
REQUIRE_EMAIL_VERIFICATION=false
