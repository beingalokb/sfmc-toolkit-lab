{
  "scripts": {
    "client": "cd ../sfmc-toolkit-client && npm start",
    "server": "cross-env NODE_OPTIONS=--max-old-space-size=8192 node server.js",
    "server:dev": "cross-env NODE_OPTIONS=--max-old-space-size=8192 nodemon server.js",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd ../sfmc-toolkit-client && npm install && npm run build && cd ../server && npm install",
    "test": "cd ../sfmc-toolkit-client && npm test",
    "eject": "cd ../sfmc-toolkit-client && npm run eject"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "ssh2-sftp-client": "^12.0.1",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "audit-ci": "^7.1.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
